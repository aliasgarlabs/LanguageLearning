<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/word_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/white_box"
    app:cardCornerRadius="8dp">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@drawable/white_box"


                >
                <TextView
                    android:id="@+id/tv_word_tag_front"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="false"
                    android:layout_centerHorizontal="false"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="16dp"
                    android:text="Title 1"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:textAllCaps="true"
                    android:visibility="invisible"
                    />

                <TextView
                    android:id="@+id/tv_word_title_front"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="false"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="16dp"
                    android:layout_below="@id/tv_word_tag_front"
                    android:text="Title 1"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:textStyle="normal"
                    android:textAllCaps="true"

                    />


                <Button
                    android:id="@+id/reveal_button_front"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_word_title_front"
                    android:background="@drawable/white_box"
                    android:backgroundTint="#F1EEEE"
                    android:elevation="0dp"
                    android:text="Tap to see definition ->"
                    android:textSize="12sp"
                    android:layout_marginTop="16dp"

                    />




</RelativeLayout>
</androidx.cardview.widget.CardView>